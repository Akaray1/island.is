{
  "name": "clients-documents",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/clients/documents/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/clients/documents/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/clients/documents"],
      "options": {
        "jestConfig": "libs/clients/documents/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "update-openapi-document": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "curl ${POSTHOLF_BASE_PATH}/swagger/docs/v1 -H \"accept: application/json\" -H \"Authorization:Bearer $(curl -X POST ${POSTHOLF_TOKEN_URL} -d grant_type='client_credentials&client_id=${POSTHOLF_CLIENTID}&client_secret=${POSTHOLF_CLIENT_SECRET}&scope={POSTHOLF_BASE_PATH}/.default' | jq .access_token -r  )\" > src/clientConfig.json",
          "prettier --write src/clientConfig.json"
        ],
        "parallel": false,
        "cwd": "libs/clients/documents"
      }
    },
    "codegen/backend-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn openapi-generator -o libs/clients/documents/gen/fetch -i libs/clients/documents/src/clientConfig.json"
      },
      "outputs": ["{projectRoot}/gen/fetch"]
    }
  },
  "tags": ["lib:client", "scope:client"]
}
