{
  "name": "clients-national-registry-v3",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/clients/national-registry/v3/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/clients/national-registry/v3/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/clients/national-registry/v3"],
      "options": {
        "jestConfig": "libs/clients/national-registry/v3/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "update-openapi-document": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "ACCESS_TOKEN=$(curl -X POST https://skraidentitydev.b2clogin.com/skraidentitydev.onmicrosoft.com/b2c_1_midlun_flow/oauth2/v2.0/token -d grant_type=client_credentials -d client_id=${NAT_REG_CLIENT_ID} -d client_secret=${NAT_REG_CLIENT_SECRET} -d scope=https://skraidentitydev.onmicrosoft.com/midlun/.default | jq -r .access_token)",
          "curl -H \"Authorization: Bearer ${ACCESS_TOKEN}\" https://midlun-dev.skra.is/swagger/v1/swagger.json > src/clientConfig.json",
          "jq '.components.schemas.ProblemDetails.additionalProperties = false' src/clientConfig.json > tmp.json && mv tmp.json src/clientConfig.json",
          "prettier --write src/clientConfig.json"
        ],
        "parallel": false,
        "cwd": "libs/clients/national-registry/v3"
      }
    },
    "codegen/backend-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn openapi-generator -o libs/clients/national-registry/v3/gen/fetch -i libs/clients/national-registry/v3/src/clientConfig.json"
      },
      "outputs": ["{projectRoot}/gen/fetch"]
    }
  },
  "tags": ["lib:client", "scope:client"]
}
